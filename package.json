{
  "name": "@mojaloop/quoting-bc",
  "version": "0.0.1",
  "description": "mojaloop quoting bounded context.",
  "license": "Apache-2.0",
  "homepage": "https://github.com/mojaloop/quoting-bc",
  "private": true,
  "bugs": {
    "url": "https://github.com/mojaloop/quoting-bc/issues#readme"
  },
  "contributors": [
    "Jason Bruwer <jason.bruwer@coil.com>",
    "Pedro Sousa Barreto <pedrob@crosslaketech.com>",
    "Gonçalo Garcia <goncalogarcia99@gmail.com>",
    "José Antunes <jose.antunes@arg.software>",
    "Rui Rocha <rui.rocha@arg.software>"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "npm -ws run build",
    "watch": "npm -ws run watch",
    "clean": "npm run clean:dist && npm run clean:node-modules",
    "clean:node-modules": "rm -Rf node_modules && npm run clean:node-modules -ws",
    "clean:dist": "npm run clean:dist -ws",
    "pretest": "echo 'FIX ME'",
    "lint": "npm -ws run lint",
    "lint:fix": "npm -ws run lint:fix",
    "test": "npm run test:unit",
    "test:unit": "npm -ws --if-present run test:unit",
    "test:integration": "jest --runInBand --forceExit --detectOpenHandles --testPathPattern=integration",
    "posttest": "npm run coverage:merge && npm run coverage:gen-report",
    "coverage:merge": "nyc merge ./coverage/ ./coverage/coverage.json",
    "coverage:gen-report": "nyc report --reporter=lcov --temp-dir=./coverage",
    "audit:check": "npm audit",
    "audit:resolve": "npm audit fix",
    "dep:check": "ncu -e 2; npm -ws run dep:check",
    "dep:update": "ncu -e 2 -u; npm -ws run dep:update",
    "start:quoting-svc": "npm -w packages/quoting-svc run start"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.1",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "nyc": "^15.1.0",
    "tslib": "^2.5.0",
    "npm-check-updates": "^16.7.9",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "workspaces": [
    "packages/domain-lib",
    "packages/implementations-lib",
    "packages/quoting-svc",
    "packages/shared-mocks-lib",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.13.0"
  }
}
